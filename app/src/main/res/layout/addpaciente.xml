<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adicionar Paciente"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preencha os dados abaixo"
            android:layout_marginTop="4dp"
            android:textColor="#757575"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/text_view_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/button_close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/close_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#000000"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/label_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Paciente"
            android:layout_marginTop="24dp"
            android:textStyle="bold"
            android:textColor="#4DB6AC"
            app:layout_constraintTop_toBottomOf="@id/text_view_subtitle"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/edit_text_nome"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/searchbar"
            android:hint="Ex: Maria Silva"
            android:inputType="textPersonName|textCapWords"
            android:paddingHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_nome" />

        <TextView
            android:id="@+id/label_nomeresp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Responsável"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textColor="#4DB6AC"
            app:layout_constraintTop_toBottomOf="@id/edit_text_nome"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/edit_text_nomeresptext"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/searchbar"
            android:hint="Ex: João da Silva"
            android:inputType="textPersonName|textCapWords"
            android:paddingHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_nomeresp" />

        <TextView
            android:id="@+id/email_txttadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Email"
            android:textStyle="bold"
            android:textColor="#4DB6AC"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_text_nomeresptext" />

        <EditText
            android:id="@+id/email_inputtlab"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/searchbar"
            android:hint="email@exemplo.com"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email_txttadd" />

        <TextView
            android:id="@+id/label_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data de Nascimento"
            android:textStyle="bold"
            android:textColor="#4DB6AC"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/email_inputtlab"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/edit_text_data_nascimento"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:hint="DD/MM/AAAA"
            android:inputType="date"
            android:background="@drawable/searchbar"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/label_data"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/label_diagnostico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diagnóstico Inicial"
            android:textStyle="bold"
            android:textColor="#4DB6AC"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/edit_text_data_nascimento"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/edit_text_diagnostico"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/searchbar"
            android:hint="Ex: TEA Nível 1"
            android:inputType="textMultiLine"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_diagnostico" />

        <Button
            android:id="@+id/btnAddNewPatient"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:background="@drawable/patientlistgradient"
            android:text="SALVAR PACIENTE"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:backgroundTint="@null"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/edit_text_diagnostico"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/button_cancelar"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:text="Cancelar"
            android:textAllCaps="false"
            android:textColor="#757575"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnAddNewPatient"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>