<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background_login"
    android:paddingTop="40dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <ImageView
        android:id="@+id/account_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/outline_account_circle_24"
        android:background="@drawable/bg_circle_white"
        android:elevation="6dp"
        android:translationZ="10dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/welcome_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Bem-vindo"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account_icon"
        />

    <TextView
        android:id="@+id/login_tnx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Faça login para continuar"
        android:textColor="@color/btn_login"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcome_txt"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/white_bg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/basicWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_tnx">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp">

            <TextView
                android:id="@+id/email_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email ou Usuário"
                android:textColor="@color/green_txt"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <EditText
                android:id="@+id/email_input"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:hint="seu@email.com"
                android:background="@drawable/input_bg"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/email_txt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/password_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senha"
                android:textColor="@color/green_txt"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/email_input"/>

            <EditText
                android:id="@+id/password_input"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:hint="Digite sua senha"
                android:background="@drawable/input_bg"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/password_txt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/forgot_password_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Esqueceu a senha?"
                android:textSize="15dp"
                android:textColor="@color/btn_login"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/password_input"/>

            <Button
                android:id="@+id/btnEntrar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Entrar"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/btn_login_selector"
                android:elevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/forgot_password_txt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/btnCadastro"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Cadastrar Usuário"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/btn_login_selector"
                android:elevation="4dp"
                app:layout_constraintTop_toBottomOf="@+id/btnEntrar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>